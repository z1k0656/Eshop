@model Car

@{
    ViewData["Title"] = "Details of the Car";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.Model</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <input asp-for="ImageURL" class="form-control" style="visibility: hidden;" readonly />
                    <img class="border-info" style="max-width: 400px; border: 1px solid black; border-radius: 10px;" id="ImageURLPreview" />
                </div>
                @if (User.IsInRole("Admin"))
                {
                    <div class="form-group">
                        <label asp-for="ImageURL" class="control-label"></label>
                        <input asp-for="ImageURL" class="form-control" readonly />
                        <span asp-validation-for="ImageURL" class="text-danger"></span>
                    </div>
                }
                <div class="form-group">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control" readonly />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CarMark" class="control-label"></label>
                    <input asp-for="CarMark" class="form-control" readonly />
                    <span asp-validation-for="CarMark" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" readonly />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-Description-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Seller.FullName" class="control-label"></label>
                    <input asp-for="@Model.Seller.FullName" class="form-control" readonly />
                    <span asp-Description-for="Seller.FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" readonly />
                    <span asp-Description-for="Seller.FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.CarId">Edit</a>
                    }
                    <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ImageURLPreview');
            output.src = $("#ImageURL").val();
        })
    </script>
}